<?xml version="1.0" encoding="UTF-8"?>

<!-- Configuration of the data storage layer of myMed -->
<node>
	<backend>
	
		<!-- Cloud Info -->
		<cassandra>
			<ListenAddress>127.0.0.1</ListenAddress>
			<!-- See ../protocols/cassandra/cassandra_0.6.6/conf/storage-conf.xml -->
			<StoragePort>4200</StoragePort>
			<ThriftAddress>127.0.0.1</ThriftAddress>
			<ThriftPort>4201</ThriftPort>
		</cassandra>
		
		<!-- P2P Info -->
		<synapse address="mymed2.sophia.inria.fr" port="0">
			<chord>
				<ListenAddress>mymed2.sophia.inria.fr</ListenAddress>
				<StoragePort>0</StoragePort><!-- 0 means random free port number -->
			</chord>
			<kad>
				<ListenAddress>mymed2.sophia.inria.fr</ListenAddress>
				<StoragePort>0</StoragePort><!-- 0 means random free port number -->
			</kad>
		</synapse>
		
	</backend>
</node>
