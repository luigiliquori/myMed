<!-- Configuration of the data storage layer of myMed -->
<!-- Change the @address@ field to the IP address of the actual machine
That value is substituted at compile time using Ant! -->
<node>
	<backend>
		<!-- Cloud Info -->
		<cassandra>
			<ListenAddress>@address@</ListenAddress>
			<!-- See the Cassandra configuration file at ../protocols/cassandra/cassandra/conf/cassandra.yaml -->
			<StoragePort>0</StoragePort>
			<ThriftAddress>@address@</ThriftAddress>
			<ThriftPort>0</ThriftPort>
		</cassandra>

		<!-- P2P Info -->
		<synapse address="@address@" port="0">
			<chord>
				<ListenAddress>@address@</ListenAddress>
				<!-- 0 means random free port number -->
				<StoragePort>0</StoragePort>
			</chord>
			<kad>
				<ListenAddress>@address@</ListenAddress>
				<!-- 0 means random free port number -->
				<StoragePort>0</StoragePort>
			</kad>
		</synapse>
	</backend>
</node>
