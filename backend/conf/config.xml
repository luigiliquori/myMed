<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuration of the data storage layer of myMed -->
<!-- Change the x.x.x.x field to the IP address of the actual machine  -->
<node>
	<backend>
		<!-- Cloud Info -->
		<cassandra>
			<ListenAddress>127.0.0.1</ListenAddress>
			<!-- See ../protocols/cassandra/cassandra_0.6.6/conf/storage-conf.xml -->
			<StoragePort>4200</StoragePort>
			<ThriftAddress>127.0.0.1</ThriftAddress>
			<ThriftPort>4201</ThriftPort>
		</cassandra>
		<!-- P2P Info -->
		<synapse address="138.96.242.2" port="0">
			<chord>
				<ListenAddress>138.96.242.2</ListenAddress>
				<!-- 0 means random free port number -->
				<StoragePort>0</StoragePort>
			</chord>
			<kad>
				<ListenAddress>138.96.242.2</ListenAddress>
				<!-- 0 means random free port number -->
				<StoragePort>0</StoragePort>
			</kad>
		</synapse>
	</backend>
</node>
